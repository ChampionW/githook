{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        // "outFile": "../../built/local/tsc.js",
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "src/**/*",
        "utils/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}